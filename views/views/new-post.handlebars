<div class="post card">
  <div class="card-header">
    <h2>Create New Post</h2>
  </div>
  <form id="new-post-form" class="card-body">
    <label for="post-title" class="form-label">Title</label>
    <input type="text" name="post-title" id="post-title" class="form-input" required />

    <label for="post-body" class="form-label">Content</label>
    <textarea name="post-body" id="post-body" class="form-input" required></textarea>

    <button type="submit" class="btn">Create</button>
  </form>
</div>

<script src="/js/new.js"></script>
