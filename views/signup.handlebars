<div class="card">
  <div class="card-header">
    <h2>Sign Up</h2>
  </div>
  <div id="signup" role="tabpanel">
    <form id="signup-form" class="card-body">
      <div class="form-group">
        <label for="username-input-signup">Username:</label>
        <input type="text" id="username-input-signup" class="form-control" required />
      </div>
      <div class="form-group">
        <label for="password-input-signup">Password:</label>
        <input type="password" id="password-input-signup" class="form-control" required />
      </div>
      <button type="submit" id="signup-btn" class="btn btn-primary">Signup</button>
      <p class="mt-2">Already have an account? <a href="/login">Login instead</a></p>
    </form>
  </div>
</div>

<script src="/js/signup.js" defer></script>
